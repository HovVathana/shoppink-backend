{
  "version": 2,
  "functions": {
    "server.js": {
      "runtime": "@vercel/node",
      "maxDuration": 25,
      "maxLambdaSize": "50mb",
      "includeFiles": [
        "prisma/**",
        "middleware/**",
        "routes/**",
        "lib/**",
        "config/**"
      ]
    }
  },
  "routes": [
    {
      "src": "/api/(.*)",
      "dest": "/server.js"
    },
    {
      "src": "/(.*)",
      "dest": "/server.js"
    }
  ],
  "buildCommand": "npm run build",
  "installCommand": "npm install",
  "env": {
    "NODE_ENV": "production",
    "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-1.0.x"
  },
  "build": {
    "env": {
      "PRISMA_CLI_BINARY_TARGETS": "rhel-openssl-1.0.x"
    }
  }
}
